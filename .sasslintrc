{
    "files": {
        "include": "src/**/*.scss"
    },

    "options": {
        "max-warnings": 0
    },

    "rules": {
        "attribute-quotes": 2,

        "bem-depth": 2,

        "border-zero": 0,

        "brace-style": [
            2,
            {
                "allow-single-line": false
            }
        ],

        "class-name-format": [
            2,
            {
                "allow-leading-underscore": false,
                "convention": "camelcase"
            }
        ],

        "clean-import-paths": [
            2,
            {
                "filename-extension": true
            }
        ],

        "declarations-before-nesting": 2,

        "empty-args": 2,

        "empty-line-between-blocks": 2,

        "extends-before-declarations": 2,

        "extends-before-mixins": 2,

        "final-newline": 2,

        "force-attribute-nesting": 2,

        "force-element-nesting": 2,

        "force-pseudo-nesting": 2,

        "function-name-format": 2,

        "hex-length": [
            2,
            {
                "style": "long"
            }
        ],

        "hex-notation": 2,

        "id-name-format": 2,

        "indentation": [
            2,
            {
                "size": 4
            }
        ],

        "leading-zero": 0,

        "max-file-line-count": 2,

        "max-line-length": 0,

        "mixin-name-format": [
            2,
            {
                "allow-leading-underscore": false,
                "convention": "camelcase"
            }
        ],

        "mixins-before-declarations": [
            2,
            {
                exclude: [
                    'desktopAndAbove',
                    'mobileAndAbove',
                    'mobileAndBelow',
                    'mobileOnly',
                    'tabletAndAbove',
                    'tabletAndBelow',
                    'tabletOnly'
                ]
            }
        ],

        "nesting-depth": 2,

        "no-attribute-selectors": 0,

        "no-color-hex": 0,

        "no-color-keywords": 2,

        "no-color-literals": 2,

        "no-css-comments": 0,

        "no-debug": 2,

        "no-disallowed-properties": 2,

        "no-duplicate-properties": 2,

        "no-empty-rulesets": 0,

        "no-extends": 2,

        "no-ids": [
            2,
            false
        ],

        "no-important": 2,

        "no-invalid-hex": 2,

        "no-mergeable-selectors": 2,

        "no-misspelled-properties": 2,

        "no-qualifying-elements": 2,

        "no-trailing-whitespace": [
            2,
            true
        ],

        "no-trailing-zero": 2,

        "no-transition-all": 2,

        "no-universal-selectors": 0,

        "no-url-domains": 2,

        "no-url-protocols": 2,

        "no-vendor-prefixes": 2,

        "no-warn": 2,

        "one-declaration-per-line": 2,

        "placeholder-in-extend": 2,

        "placeholder-name-format": 2,

        "property-sort-order": [
            2,
            {
                "order": "alphabetical"
            }
        ],

        "property-units": [
            2,
            {
                "global": [ "px" ],
                "per-property": {
                    "height": [ "px", "vh" ],
                    "min-height": [ "px", "vh" ],
                    "min-width": [ "px", "%", "vh" ],
                    "transition": [ "s" ],
                    "width": [ "px", "%", "vw" ]
                }
            }
        ],

        "pseudo-element": 2,

        "quotes": 2,

        "shorthand-values": 2,

        "single-line-per-selector": 2,

        "space-after-bang": 2,

        "space-after-colon": 2,

        "space-after-comma": 2,

        "space-around-operator": 2,

        "space-before-bang": 2,

        "space-before-brace": 2,

        "space-before-colon": 2,

        "space-between-parens": 2,

        "trailing-semicolon": 2,

        "url-quotes": 2,

        "variable-for-property": [
            2,
            {
                "properties": [
                    "background-color",
                    "border-color",
                    "color",
                    "font-family"
                ]
            }
        ],

        "variable-name-format": [
            2,
            {
                "allow-leading-underscore": false,
                "convention": "camelcase"
            }
        ],

        "zero-unit": 0
    }
}
